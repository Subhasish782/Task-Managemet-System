<%- include('../layout') %>
<h2>Task List</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Assigned To</th>
      <th>Due Date</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.forEach(task => { %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.assignedTo %></td>
        <td><%= task.dueDate ? task.dueDate.toDateString() : '' %></td>
        <td><%= task.status %></td>
        <td>
          <a href="/tasks/edit/<%= task._id %>">Edit</a>
          <form action="/tasks/delete/<%= task._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
